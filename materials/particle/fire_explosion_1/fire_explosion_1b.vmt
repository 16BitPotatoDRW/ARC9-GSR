"SpriteCard"
{
	"$basetexture" "particle\fire_explosion_1\fire_explosion_1"
	
	// Set this if you always want "additive over" blending (ONE:INVSRCALPHA)
	$ADDOVERBLEND 1
	
// RAMPTEXTURE and POWERFUNCTION are mutually exclusive:	
//	$RAMPTEXTURE "particle/fireGradient.vtf"
	$POWERFUNCTION "[0.8 2.5 5]"
	
	$OVERBRIGHTFACTOR 1
//	$EXTRACTGREENALPHA 1
	$ADDSELF 1.0
	$DEPTHBLEND 1
	$startfadesize .45
	$endfadesize .65
	$MAXSIZE .45
	$BLENDFRAMES 1
}
